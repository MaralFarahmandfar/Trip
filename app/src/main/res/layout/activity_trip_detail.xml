<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    android:layoutDirection="rtl"
    android:padding="16dp">

    <!-- هدر -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="12dp"
        android:paddingBottom="4dp"
        android:layoutDirection="rtl">

        <!-- عنوان سفر -->
        <TextView
            android:id="@+id/textTripTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="نام سفر"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="start"
            android:layout_marginStart="16dp" />

        <!-- آیکون پروفایل -->
        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_profile"
            android:background="@drawable/circle_background"
            android:padding="6dp"
            android:contentDescription="پروفایل"
            android:layout_marginEnd="8dp" />

        <!-- دکمه بازگشت -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp">

            <ImageButton
                android:id="@+id/buttonBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_back"
                android:scaleX="-1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="بازگشت"
                android:padding="6dp" />
        </FrameLayout>
    </LinearLayout>


    <!-- تاریخ شروع و پایان -->
    <TextView
        android:id="@+id/textTripStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تاریخ شروع: -"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/textTripEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تاریخ پایان: -"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp"/>

    <!-- خط صورتی -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E91E63" />

    <!-- عنوان لیست کارها -->
    <TextView
        android:id="@+id/textTasksTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="جاذبه ها "
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="start"
        android:layout_marginTop="16dp" />

    <!-- فرم افزودن جاذبه -->
    <LinearLayout
        android:id="@+id/layoutAddAttraction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/editTextAttraction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="نام جاذبه"
            android:textColorHint="@color/hintColor"
            android:textColor="@color/black"
            android:padding="8dp"
            android:background="@drawable/rounded_input_bg"/>

        <Button
            android:id="@+id/buttonConfirmAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تایید"
            android:textColor="@color/white"
            app:backgroundTint="@color/colorAccent"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- لیست جاذبه‌ها -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAttractions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:contentDescription="لیست جاذبه‌ها"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@+id/textAlarmsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="آلارم‌ها"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="start"
        android:layout_marginTop="16dp" />


    <!-- لیست آلارم‌ها -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAlarms"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp" />

    <!-- دکمه‌های پایین -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonNewAttraction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="➕ جاذبه جدید"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/colorAccent"
            android:layout_alignParentStart="true" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonAddAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⏰ آلارم جدید"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/colorPrimary"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>